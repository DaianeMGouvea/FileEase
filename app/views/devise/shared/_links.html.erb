<div class="flex flex-wrap justify-between">
  <div class="flex items-center justify-center <%- if controller_name == 'sessions' %>hidden<% end %>">
    <%= link_to "Entrar com sua conta", new_session_path(resource_name), class: "text-indigo-500 text-sm" %>
  </div>

  <div class="flex items-center justify-center <%- if !devise_mapping.registerable? || controller_name == 'registrations' %>hidden<% end %>">
    <%= link_to "Registrar uma conta", new_registration_path(resource_name), class: "text-indigo-500 text-sm" %>
  </div>

  <div class="flex items-center justify-center <%- if !devise_mapping.recoverable? || controller_name == 'passwords' || controller_name == 'registrations' %>hidden<% end %>">
    <%= link_to "Esqueceu a senha?", new_password_path(resource_name), class: "text-indigo-500 text-sm" %>
  </div>
</div>
